<resources>

    <attr name="cropImageStyle" format="reference" />

    <declare-styleable name="CropImageView">
        <attr name="highlightColor" format="reference|color" />
        <attr name="showThirds" format="boolean" />
        <attr name="showHandles">
          <enum name="changing" value="0" />
          <enum name="always" value="1" />
          <enum name="never" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="LayoutRadioButton">
        <attr name="is_selected" format="boolean" />
    </declare-styleable>

    <declare-styleable name="LayoutRadioButtonGroup">
        <attr name="selected_index" format="integer" />
    </declare-styleable>

    <declare-styleable name="SubsamplingScaleImageView">
        <attr name="src" format="reference"/>
        <attr name="assetName" format="string"/>
        <attr name="panEnabled" format="boolean"/>
        <attr name="zoomEnabled" format="boolean"/>
        <attr name="quickScaleEnabled" format="boolean"/>
        <attr name="tileBackgroundColor" format="color"/>
    </declare-styleable>

</resources>